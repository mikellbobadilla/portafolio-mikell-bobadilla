---
import SocialPeel from "./SocialPeel.astro";
import Badge from "./Badge.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import GitHubIcon from "./icons/GitHub.astro";
import MailIcon from "./icons/Mail.astro";
---

<img
    class="rounded-full size-12 mb-4"
    src="https://t4.ftcdn.net/jpg/02/29/75/83/360_F_229758328_7x8jwCwjtBMmC6rgFzLFhZoEpLobB6L8.jpg"
    alt="user photo"
/>
<h1
    class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
>
    Hey, soy mikell
    <a
        href="https://www.linkedin.com/in/mikellbobadilla/"
        target="_blank"
        rel="noopener"
        class="flex justify-center items-center"
    >
        <Badge>Disponible para trabajar</Badge>
    </a>
</h1>
<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
    <span class="text-blue-200/80">2 años de experiencia.</span>
    <span class="text-yellow-100/90"> Desarrollador Web y Backend.</span>
    <span class="text-red-200/90"> De Buenos Aires, Argentina.</span>
    <span class="opacity-85">Especializado en crear aplicaciones únicas.</span>
</h2>

<nav class="flex gap-4 mt-8 flex-wrap">
    <SocialPeel href="https://www.linkedin.com/in/mikellbobadilla/">
        <LinkedIn class="size-4 md:size-6" />
        LinkedIn
    </SocialPeel>

    <SocialPeel href="https://github.com/mikellbobadilla">
        <GitHubIcon class="size-4 md:size-6" />
        GitHub
    </SocialPeel>

    <SocialPeel href="mailto:mikellbobadilla@gmail.com">
        <MailIcon class="size-4 md:size-6" />
        mikellbobadilla@gmail.com
    </SocialPeel>
</nav>

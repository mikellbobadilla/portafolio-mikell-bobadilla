---
import NextIcon from "../components/icons/NextJS.astro";
import TailwindIcon from "../components/icons/Tailwind.astro";
import ReactIcon from "../components/icons/React.astro";

const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-gray-500/20 text-white",
        icon: NextIcon,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-gray-500/20 text-white",
        icon: TailwindIcon,
    },
    REACT: {
        name: "React",
        class: "bg-gray-500/20 text-white",
        icon: ReactIcon,
    },
};

const PROJECTS = [
    {
        title: "SVGL - A beautiful library with SVG logos",
        description:
            "Biblioteca de logos SVG de las marcas mÃ¡s populares. +10k visitas al mes. +2K svgs descargados. Creado desde cero con Next.js, React y Tailwind CSS.",
        link: "https://svgl.vercel.app/",
        github: "https://github.com/pheralb/svgl",
        image: "/projects/svgl.webp",
        tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.REACT],
    },
];
---

{
    PROJECTS.map(({ title, description, tags, image }) => (
        <article>
            <h3 class="text-2xl text-balance font-semibold text-yellow-200/80 mb-2">
                {title}
            </h3>
            <p class="text-md sm:text-lg text-pretty mb-4">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-4">
                {tags.map((tag) => (
                    <span
                        class={`flex gap-x-1 rounded-full text-xs  ${tag.class} py-1 pl-2 pr-4`}
                    >
                        <tag.icon class="size-4" />
                        <li>{tag.name}</li>
                    </span>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/5"
                src={image}
                alt={`Captura de pantalla del proyecto ${image}`}
            />
        </article>
    ))
}

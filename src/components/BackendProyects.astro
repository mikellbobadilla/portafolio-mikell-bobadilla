---
import JavaIcon from './icons/JavaIcon.astro';
import PostgresIcon from './icons/PostgresIcon.astro';
import SpringIcon from './icons/SpringIcon.astro';


const TAGS = {
    SPRING: {
        name: "Spring boot",
        class: "bg-gray-500/20 text-white",
        icon: SpringIcon
    },
    POSTGRES: {
        name: "Postgres SQL",
        class: "bg-gray-500/20 text-white",
        icon: PostgresIcon
    },
    JAVA: {
        name: "Java",
        class: "bg-gray-500/20 text-white",
        icon: JavaIcon
    }
}

const PROJECTS = [
    {
        title: "Blogging Platform",
        description: "Desarrollo de una API RESTful para la gestión de blogs, implementada con las mejores prácticas actuales y estándares de la industria. La API permite crear, leer, actualizar y eliminar publicaciones, gestionando usuarios, comentarios y categorías, asegurando seguridad, escalabilidad y fácil mantenimiento.",
        github: "https://github.com/mikellbobadilla/Bloggin-Platform",
        tags: [TAGS.JAVA, TAGS.SPRING, TAGS.POSTGRES],
        image: "/projects/blogging.png",
        link: ""
    },
    {
        title: "Movie Stream",
        description: "Desarrollo de una API RESTful para el streaming y administración de recursos multimedia, incluyendo carga, descarga, reproducción en tiempo real, y manejo de múltiples pistas de audio y subtítulos. Optimizada para una gestión eficiente y segura de archivos multimedia.",
        github: "https://github.com/mikellbobadilla/movie-stream-backend",
        tags: [TAGS.JAVA, TAGS.SPRING, TAGS.POSTGRES],
        image: "/projects/stream.png",
        link: ""
    }
]
---

{
    PROJECTS.map(({ title, description, tags, image, github }) => (
        <article class="mb-10">
            <h3 class="text-2xl text-balance font-semibold text-yellow-200/80 mb-2">{title}</h3>
            <p class="text-md sm:text-lg text-pretty mb-4">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-4">
                {tags.map((tag) => (
                    <span
                        class={`flex gap-x-1 rounded-full text-xs  ${tag.class} py-1 pl-2 pr-4`}
                    >
                        <tag.icon class="size-4" />
                        <li>{tag.name}</li>
                    </span>
                ))}
            </ul>
            <a href={github} target="_blank" rel="noopener noreferrer">
                <img
                class="rounded shadow-2xl shadow-white/5"
                src={image}
                alt={`Captura de pantalla del proyecto ${image}`}
            />
            </a>
        </article>
    ))
}